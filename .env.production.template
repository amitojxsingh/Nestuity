# Production Environment Configuration
# Copy this file to .env.production and replace all <...> placeholders
# Generate passwords with: openssl rand -base64 32

# Environment
ENV_VARIABLE=prod
NEXT_PUBLIC_ENV_VARIABLE=prod

# Database - Use strong passwords!
POSTGRES_DB=nestuity_prod
POSTGRES_USER=nestuity_prod_user
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Frontend - Replace with your server IP or domain
NEXT_PUBLIC_API_URL=http://<YOUR_SERVER_IP>/api

# Auth - Generate new secret with: openssl rand -base64 32
# AUTH_URL must match your production domain (including http://)
AUTH_URL=http://<YOUR_SERVER_IP>
AUTH_SECRET=<GENERATE_NEW_AUTH_SECRET>
AUTH_GOOGLE_ID=<YOUR_GOOGLE_OAUTH_CLIENT_ID>
AUTH_GOOGLE_SECRET=<YOUR_GOOGLE_OAUTH_CLIENT_SECRET>

# Email (Mailjet)
TEMPLATE_WELCOME_ID=<YOUR_WELCOME_EMAIL_TEMPLATE_ID>
TEMPLATE_DIAPER_REMINDER_ID=<YOUR_REMINDER_EMAIL_TEMPLATE_ID>
MAILJET_API_KEY=<MAILJET_API_KEY>
MAILJET_API_SECRET=<MAILJET_API_SECRET>
MAILJET_EMAIL_FROM=<MAILJET_EMAIL_FROM>

TEMPLATE_WELCOME_ID: ${TEMPLATE_WELCOME_ID}
TEMPLATE_DIAPER_REMINDER_ID: ${TEMPLATE_DIAPER_REMINDER_ID}
TEMPLATE_WEEKLY_SUMMARY_ID: ${TEMPLATE_WEEKLY_SUMMARY_ID}

# Price Scraper
SCRAPER_API_KEY=<YOUR_SCRAPER_API_KEY>
BACKEND_API_URL=http://nestuity-backend-prod:8080
LOG_LEVEL=INFO

# CORS - Replace with your server IP
CORS_ALLOWED_ORIGINS=http://<YOUR_SERVER_IP>
